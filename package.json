{
  "name": "pielette-addon-sendkeys",
  "version": "0.0.1",
  "description": "Pielette addon for mimicking key presses.",
  "main": "./lib/index.js",
  "engines": {
    "node": ">=20.1"
  },
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/node": "~18",
    "jest": "~29.6",
    "prettier": "~3.0",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "typescript": "~5.1"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
